namespace App\Commands\Migration;

use Hleb\Main\DB;
use Phphleb\Migration\Src\MigrateException;
use Phphleb\Migration\Src\Migration;

class Status extends \Hleb\Scheme\App\Commands\MainTask
{
    // php console migration/status

    const DESCRIPTION = "Migration status";

    protected function execute(): void
    {
        try {
            $dir = HLEB_GLOBAL_DIRECTORY . DIRECTORY_SEPARATOR . 'migrations';
            $migrations = (new Migration(DB::getPdoInstance(), 'migrations', $dir))->status();
            if ($migrations) {
               for ($i = 0; $i < count($migrations); $i++) {
                  echo PHP_EOL . ($i + 1) . '. ' . $migrations[$i];
               }
                echo PHP_EOL;
            }
        } catch (MigrateException $e) {
            exit(PHP_EOL . 'ERROR: ' . $e->getMessage() . PHP_EOL);
        }
    }

}

